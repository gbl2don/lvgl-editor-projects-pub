<component>
    <previews>
        <preview name="MoonCompView" width="225" height="100" style_bg_color="0x000000"/>
    </previews>
    <consts>
        <int name="w_size" value="225"/>
        <int name="h_size" value="100"/>
        <int name="moon_icon_height" value="98"/>
        <int name="sun_box_width" value="100"/>
        <int name="moon_box_width" value="100"/>
        <int name="sun_moon_box_space_width" value="10"/>
        <int name="moon_width" value="75"/>
        <int name="moon_height" value="75"/>
    </consts>
    <view extends="lv_obj" width="#w_size" height="#h_size" flex_flow="row" style_pad_all="0" style_border_width="0"  style_flex_main_place="center" scrollable="false">
        <style name="BlackView"/>
        <lv_label height="30" bind_text="s_indoor_label" style_text_align="right" style_text_font="MartianMono_Regular_20"/>
        <lv_obj width="#w_size" height="20" flex_flow="row" style_flex_main_place="center" scrollable="false" flex_in_new_track="true">
            <style name="BlackView"/>
            <lv_label bind_text="s_indoor_temp_label" style_text_align="right" style_text_font="MartianMono_Regular_14"/>
            <lv_label name="IndoorTemperatureField" bind_text="s_indoor_temp_value" style_text_align="right" style_text_font="MartianMono_Regular_14"/>
        </lv_obj>
        <lv_obj width="#w_size" height="20" flex_flow="row" style_flex_main_place="center" scrollable="false" flex_in_new_track="true">
            <style name="BlackView"/>
            <lv_label bind_text="s_indoor_humidity_label" style_text_align="right" style_text_font="MartianMono_Regular_14"/>
            <lv_label name="IndoorHumidityField" bind_text="s_indoor_humidity_value" style_text_align="left" style_text_font="MartianMono_Regular_14"/>
        </lv_obj>
    </view>
</component>