<component>
    <previews>
        <preview name="DateTimeCompView" width="575" height="100" style_bg_color="0x000000"/>
    </previews>
    <consts>
        <int name="w_size" value="575"/>
        <int name="h_size" value="100"/>
    </consts>
    <view extends="lv_obj" width="#w_size" height="#h_size" flex_flow="row" style_pad_all="0" style_border_width="0" style_flex_main_place="center">
        <style name="BlackView"/>
        <lv_label name="WeekdayField" bind_text="s_dt_dayName" style_text_align="right" style_text_font="MartianMono_Regular_20"/>
        <lv_label text="," align="center" style_text_font="MartianMono_Regular_20"/>
        <lv_label name="DateField" bind_text="s_dt_date" style_text_align="left" style_text_font="MartianMono_Regular_20"/>
        <lv_label name="TimeField" width="#w_size" bind_text="s_dt_time" style_text_align="center" flex_in_new_track="true" style_text_font="MartianMono_Regular_46"/>
    </view>
</component>