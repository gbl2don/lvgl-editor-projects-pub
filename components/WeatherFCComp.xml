<component>
    <previews>
        <preview name="WeatherFCCompView" width="132" height="205" style_bg_color="0x000000"/>
    </previews>
    <consts>
        <int name="w_size" value="132"/>
        <int name="h_size" value="205"/>
        <int name="wi_size" value="100"/>
        <int name="wdrop_size" value="20"/>
    </consts>
    <view extends="lv_obj" width="#w_size" height="#h_size" flex_flow="row" style_pad_all="0" style_border_width="0" style_flex_main_place="center" scrollable="false">
        <style name="BlackView"/>
        <lv_label name="FCDayName" bind_text="s_fc_dayName" style_text_align="right" style_text_font="MartianMono_Regular_14"/>
        <lv_label name="FCTemperature" bind_text="s_fc_temperature" align="center" flex_in_new_track="true" style_text_font="MartianMono_Regular_14"/>
        <lv_obj height="content" flex_in_new_track="true" scrollable="false" flex_flow="row" style_flex_main_place="center">
            <style name="BlackView"/>
            <lv_image src="water_drop" width="#wdrop_size" height="#wdrop_size" inner_align="stretch" style_border_width="0" style_line_width="0" style_pad_all="0"/>
            <lv_label name="FCRain" bind_text="s_fc_rain" style_text_align="center" style_text_font="MartianMono_Regular_14"/>
        </lv_obj>
        <lv_image name="FCWeatherIcon" src="clear_day" width="#wi_size" height="#wi_size" inner_align="stretch" style_border_width="0" style_line_width="0" style_pad_all="0" flex_in_new_track="true"/>
    </view>
</component>