<component>
    <previews>
        <preview name="MoonCompView" width="225" height="185" style_bg_color="0x000000"/>
    </previews>
    <consts>
        <int name="w_size" value="225"/>
        <int name="h_size" value="185"/>
        <int name="moon_icon_height" value="98"/>
        <int name="sun_box_width" value="100"/>
        <int name="moon_box_width" value="100"/>
        <int name="sun_moon_box_space_width" value="10"/>
        <int name="moon_width" value="75"/>
        <int name="moon_height" value="75"/>
    </consts>
    <view extends="lv_obj" width="#w_size" height="#h_size" flex_flow="row" style_pad_all="0" style_border_width="0"  style_flex_main_place="center" scrollable="false">
        <style name="BlackView"/>
        <lv_obj width="#w_size" height="#moon_icon_height" flex_flow="row" style_pad_all="21" style_border_width="0"  style_flex_main_place="center" scrollable="false">
            <style name="BlackView"/>
            <lv_image name="MoonIcon" src="m_phase_13" width="#moon_width" height="#moon_height" inner_align="stretch" style_border_width="0" style_line_width="0"/>
        </lv_obj>
        <lv_obj width="#w_size" flex_flow="row" style_flex_main_place="center" flex_in_new_track="true" scrollable="false">
            <style name="BlackView"/>
            <lv_obj width="#sun_box_width"  scrollable="false" flex_flow="row"  style_flex_main_place="center">
                <style name="BlackView"/>
                <lv_label text="Sonne" style_text_align="center" flex_in_new_track="true" style_text_font="MartianMono_Regular_14"/>
                <lv_label name="Sunrise" bind_text="s_sun_rise" style_text_align="center" flex_in_new_track="true" style_text_font="MartianMono_Regular_14"/>
                <lv_label name="Sunset" bind_text="s_sun_set" style_text_align="center" flex_in_new_track="true" style_text_font="MartianMono_Regular_14"/>
            </lv_obj>
            <lv_obj width="#sun_moon_box_space_width">
                <style name="BlackView" />
            </lv_obj>
            <lv_obj width="#moon_box_width" scrollable="false" flex_flow="row"  style_flex_main_place="center">
                <style name="BlackView" />
                <lv_label text="Mond" style_text_align="center" style_text_font="MartianMono_Regular_14"/>
                <lv_label name="Moonrise" bind_text="s_moon_rise" style_text_align="center" flex_in_new_track="true" style_text_font="MartianMono_Regular_14"/>
                <lv_label name="Moonset" bind_text="s_moon_set" style_text_align="center" flex_in_new_track="true" style_text_font="MartianMono_Regular_14"/>
            </lv_obj>
        </lv_obj>
    </view>
</component>